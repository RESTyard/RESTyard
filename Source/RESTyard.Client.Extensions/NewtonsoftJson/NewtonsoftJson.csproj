<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<!-- General settings -->

		<VersionSuffixLocal></VersionSuffixLocal>
		<!--When variable is set we are building a prerelease package-->
		<VersionSuffixLocal Condition="'$(IsPreRelease)'!='' AND  '$(IsPreRelease)'">
			$(VersionSuffix)
		</VersionSuffixLocal>

		<Version>3.0.0$(VersionSuffixLocal)</Version>
		<TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

		<!-- Descriptions and information -->
		<Title>Newtonsoft.Json implementation for RESTyard.Client</Title>
		<PackageDescription>Implementations of IStringParser, IParameterSerializer, IProblemStringReader for RESTyard.Client using Newtonsoft.Json</PackageDescription>
		<PackageTags>Client REST Siren Hypermedia Extensions</PackageTags>
		<Authors>Jasper Marianczuk; Aydin Mir Mohammadi; Waldemar Tomme; Alexander Wiedemann; Marcel Weigel</Authors>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageProjectUrl>https://github.com/bluehands/WebApiHypermediaExtensions</PackageProjectUrl>
		<RepositoryType>Git</RepositoryType>
		<RepositoryUrl>https://github.com/bluehands/WebApiHypermediaExtensions.git</RepositoryUrl>
		<RepositoryBranch>$(BranchName)</RepositoryBranch>
		<PackageIcon>Ry-Icon_128x128.png</PackageIcon>

		<!-- Package specific settings -->
		<PackageId>RESTyard.Client.Extensions.NewtonsoftJson</PackageId>
		<PackageVersion>$(Version)</PackageVersion>
		<PackageReleaseNotes></PackageReleaseNotes>
		<IsPackable>true</IsPackable>
		<RootNamespace>RESTyard.Client.Extensions.NewtonsoftJson</RootNamespace>
	</PropertyGroup>

	<!-- package image -->
	<ItemGroup>
		<None Include=".\Images\Ry-Icon_128x128.png" Pack="true" PackagePath="\" />
	</ItemGroup>
	
	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
	</ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\RESTyard.Client\RESTyard.Client.csproj" />
  </ItemGroup>

</Project>
