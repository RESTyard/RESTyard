@{
    var modifiers = string.Join(
        " ",
        IsAbstract ? "abstract" : "",
        IsPartial ? "partial" : "");
    var inheritance = Inherits != null ? $": {Inherits}" : "";
}

public @modifiers record @Name@("(")@Parameters) @inheritance @GenericConstraints
{
@ChildContent
}

@code {
    [Parameter] public RenderFragment ChildContent { get; set; } = null!;
    [Parameter] public bool IsAbstract { get; set; } = false;
    [Parameter] public bool IsPartial { get; set; } = true;
    [Parameter] public string Name { get; set; } = "";
    [Parameter] public string Parameters { get; set; } = "";
    [Parameter] public string? Inherits { get; set; }
    [Parameter] public string GenericConstraints { get; set; } = "";
}