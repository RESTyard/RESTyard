<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Web Api extensions to create REST Web services using Siren as Hypermedia format</Description>
    <AssemblyTitle>Web Api Hypermedia Extensions</AssemblyTitle>
    <Version>1.3.0$(VersionSuffix)</Version>
    <Authors>Mathias Reichardt</Authors>
    <TargetFramework>netstandard1.6</TargetFramework>
    <NoWarn>$(NoWarn);1591</NoWarn>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>WebApi.HypermediaExtensions</AssemblyName>
    <PackageId>WebApi.HypermediaExtensions</PackageId>
    <PackageTags>WebApi;REST;Siren;Hypermedia;</PackageTags>
    <PackageProjectUrl>https://github.com/bluehands/WebApiHypermediaExtensions</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/bluehands/WebApiHypermediaExtensions/blob/master/LICENSE.md</PackageLicenseUrl>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyVersion>1.3.0.0</AssemblyVersion>
    <FileVersion>1.3.0.0</FileVersion>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="1.1.7" />
    <PackageReference Include="NJsonSchema" Version="9.10.50" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\Hypermedia.MediaTypes\Hypermedia.MediaTypes.csproj" />
    <ProjectReference Include="..\Hypermedia.Relations\Hypermedia.Relations.csproj" />
  </ItemGroup>

</Project>
